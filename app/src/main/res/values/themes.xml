<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.O2OBeerFinder2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.O2OBeerFinder2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.O2OBeerFinder2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.O2OBeerFinder2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>